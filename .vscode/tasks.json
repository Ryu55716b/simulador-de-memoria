{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Simulador",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-O2",
                "src/*.cpp",
                "-o",
                "simulador.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}